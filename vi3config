mode transset {
    #keybindings
        bindsym j exec "ff trans -5"
        bindsym k exec "ff trans +5"
        bindsym Escape $exit
}

mode message_control {
    #keybindings
        bindsym j exec "ff status-message prev"
        bindsym k exec "ff status-message next"
        bindsym Return exec "ff status-message activate"
        bindsym d exec "ff status-message delete"
        bindsym v exec "ff status-message view"
        bindsym Escape $exit
}

mode kill {
    #keybindings
      bindsym w exec "ff kill-workspace", $exit
      bindsym a exec $mode kill-all-app, $exit
      bindsym o move container to workspace keep, kill, exec "ff vi3_get-workspace keep", $exit
      bindsym Escape $exit
}



