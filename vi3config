        bindsym 9       exec "ff trans .9"  , $exit
        bindsym 0       exec "ff trans 1.0" , $exit
        bindsym m       exec "ff trans 0.0" , $exit
        bindsym Shift+m exec "ff trans 1.0" , $exit

        bindsym Escape $exit
        bindsym XF86Launch5 exec "ff greeter"

}

