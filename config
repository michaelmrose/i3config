    #keybindings
        bindsym 1 move container to workspace 1, workspace 1, $exit
        bindsym 2 move container to workspace 2, workspace 2, $exit
        bindsym 3 move container to workspace 3, workspace 3, $exit
        bindsym 4 move container to workspace 4, workspace 4, $exit
        bindsym 5 move container to workspace 5, workspace 5, $exit
        bindsym 6 move container to workspace 6, workspace 6, $exit
        bindsym 7 move container to workspace 7, workspace 7, $exit
        bindsym 8 move container to workspace 8, workspace 8, $exit
        bindsym 9 move container to workspace 9, workspace 9, $exit
        bindsym 0 move container to workspace 0, workspace 0, $exit
        bindsym a move container to workspace a, workspace a, $exit
        bindsym b move container to workspace b, workspace b, $exit
        bindsym c move container to workspace c, workspace c, $exit
        bindsym d move container to workspace d, workspace d, $exit
        bindsym e move container to workspace e, workspace e, $exit
        bindsym f move container to workspace f, workspace f, $exit
        bindsym g move container to workspace g, workspace g, $exit
        bindsym h move container to workspace h, workspace h, $exit
        bindsym i move container to workspace i, workspace i, $exit
        bindsym j move container to workspace j, workspace j, $exit
        bindsym k move container to workspace k, workspace k, $exit
        bindsym l move container to workspace l, workspace l, $exit
        bindsym m move container to workspace m, workspace m, $exit
        bindsym n move container to workspace n, workspace n, $exit
        bindsym o move container to workspace o, workspace o, $exit
        bindsym p move container to workspace p, workspace p, $exit
        bindsym q move container to workspace q, workspace q, $exit
        bindsym r move container to workspace r, workspace r, $exit
        bindsym s move container to workspace s, workspace s, $exit
        bindsym t move container to workspace t, workspace t, $exit
        bindsym u move container to workspace u, workspace u, $exit
        bindsym v move container to workspace v, workspace v, $exit
        bindsym w move container to workspace w, workspace w, $exit
        bindsym x move container to workspace x, workspace x, $exit
        bindsym y move container to workspace y, workspace y, $exit
        bindsym z move container to workspace z, workspace z, $exit

        bindsym Escape $exit
        bindsym F7 mode "default"
}

exec "vi3_start-vi3"
