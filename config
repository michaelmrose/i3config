# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $exit exec "vi3_switch-to-target-mode"
set $mod Mod4
set $primary_output HDMI-0 
set $secondary_output DVI-I-2

set $selectall focus parent, focus parent, focus parent
set $dm exec dmenu_run -fn 'DejaVu Sans Mono-15'

floating_modifier $mod

#-----------------------appearance-----------------------------

#class                  border  backgr  text    indicator
client.focused          #111111 #A6CD01 #036300 #2e9ef4
client.focused_inactive #111111 #444444 #ffffff #484e50
client.unfocused        #111111 #222222 #888888 #292d2e
client.urgent           #2f343a #900000 #ffffff #900000

new_window 1pixel
font pango:DejaVu Sans Mono 10

bar {
        status_command i3status
        tray_output primary
        #output $primary_output

}
#-----------------------settings---------------------------

#Keybindings

    # change focus 
        bindsym $mod+j focus up
        bindsym $mod+k focus down
        bindsym $mod+h focus left
        bindsym $mod+l focus right

    # reload the configuration file
        bindsym $mod+Shift+c reload
        bindsym $mod+Shift+r restart

    #other keybindings
        bindsym $mod+s move scratchpad
        bindsym XF86LaunchB mode "command"
        bindsym XF86Launch2 mode "open workspace"
        bindsym XF86Launch1 mode "open workspace" 
        bindsym Control+Mod1+l exec "lock"
        bindsym Control+Mod1+s exec "suspend"
        bindsym Control+Mod1+r $dm
        bindsym F13 $dm

    #easier arrow keys
        bindsym Mod1+w exec "/opt/bin/up"
        bindsym Mod1+s exec "konsole"
 
# Assign windows to workspaces and workspaces to outputs

    #windows
        assign [class=Clementine  ] s
        assign [class=Dolphin     ] d
        assign [class=Calibre     ] i
        

    #outputs
       workspace 1 output $secondary_output 
       workspace 2 output $secondary_output 
       workspace 3 output $secondary_output 
       workspace 4 output $secondary_output 
       workspace 5 output $secondary_output 
       workspace q output $secondary_output 
       workspace w output $secondary_output   
       workspace e output $secondary_output
       workspace r output $secondary_output
       workspace t output $secondary_output
       workspace a output $secondary_output
       workspace s output $secondary_output
       workspace d output $secondary_output 
       workspace f output $secondary_output
       workspace g output $secondary_output
       workspace z output $secondary_output 
       workspace x output $secondary_output 
       workspace c output $secondary_output 
       workspace v output $secondary_output 
       workspace b output $secondary_output
       workspace 6 output $primary_output
       workspace 7 output $primary_output
       workspace 8 output $primary_output
       workspace 9 output $primary_output
       workspace 0 output $primary_output
       workspace y output $primary_output
       workspace u output $primary_output
       workspace i output $primary_output
       workspace o output $primary_output
       workspace p output $primary_output
       workspace h output $primary_output
       workspace j output $primary_output
       workspace k output $primary_output
       workspace l output $primary_output
       workspace n output $primary_output
       workspace m output $primary_output
    
for_window [class="Kcalc"] floating enable
for_window [class="Calibre-gui" window_role="dialog"] floating enable
#-----------------------modes------------------------------
mode "command" {
    #Keybindings
        bindsym F13 $dm 
#        bindsym Return $dm,$exit

    # kill focused window
        bindsym q kill,$exit

    # alternatively, you can use the cursor keys:
        bindsym Up focus up
        bindsym Down focus down
        bindsym Left focus left
        bindsym Right focus right
        
        bindsym k focus up
        bindsym j focus down
        bindsym h focus left
        bindsym l focus right
        bindsym space focus output right,$exit
        bindsym tab move container to output right,focus output right,$exit 

    # move windows around
        bindsym Shift+k move up
        bindsym Shift+j move down
        bindsym Shift+h move left
        bindsym Shift+l move right
        
    
    # split in horizontal orientation
        bindsym v split h

    # split in vertical orientation
        bindsym h split v

    # enter fullscreen mode for the focused container
        bindsym f fullscreen,$exit

    # focus the parent container
        bindsym p focus parent

    # focus the child container
        bindsym d focus child

    # reload the configuration file
        bindsym $mod+Shift+c reload
        bindsym $mod+Shift+r restart

        bindsym $mod+Shift+s move scratchpad
        bindsym c exec "capslock"         , $exit
        bindsym x exec "restore-from-suspend" , $exit

        bindsym o mode "open"             
        bindsym r mode "resize"           
        bindsym m mode "move workspace"             
        bindsym w mode "open workspace"
        bindsym a mode "arrange"
        bindsym s mode "split"
        
       
        # double tapping super "locks in" command mode by setting target mode to command 
        # since $exit always returns us to the target mode 
      
        # if we hit escape we must set targetmode back to default so
        # that when the user enters command mode again they wont be "locked in to command mode"

        bindsym XF86LaunchB exec "vi3_target-command" 
        bindsym XF86Launch1 mode "open workspace"
        bindsym Escape mode "default", exec "vi3_target-default"
}

mode "open" {
    #keybindings
        bindsym b exec "firefox"                      , $exit
        bindsym c exec "coursera"                     , $exit
        bindsym d exec "steam steam://rungameid/320"  , $exit
        bindsym e exec "noteit"                       , $exit
        bindsym f exec "dolphin"                      , $exit
        bindsym h exec "hexchat"                      , $exit
        bindsym k exec "kmix"                         , $exit
        bindsym l exec "calibre"                      , $exit
        bindsym m mode "open "            
        bindsym n exec "nvpy"                         , $exit
        bindsym q exec "qbittorent"                   , $exit
        bindsym s exec "steam"                        , $exit
        bindsym t exec "konsole"                      , $exit
        bindsym v exec "qvim"                         , $exit
        bindsym w exec "wing4.1"                         , $exit
        bindsym Escape $exit
        bindsym F7 mode "default"
}

mode "open " {
    #keybindings
        bindsym u exec "clementine" , $exit
        bindsym o exec "vlc"        , $exit

        bindsym Escape $exit
        bindsym F7 mode "default"
}

mode "resize" {
    #keybindings
        bindsym Up    resize grow   height 10 px or 10 ppt
        bindsym Down  resize shrink height 10 px or 10 ppt
        bindsym Left  resize shrink width  10 px or 10 ppt
        bindsym Right resize grow   width  10 px or 10 ppt

        bindsym k resize grow   height 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym h resize shrink width  10 px or 10 ppt
        bindsym l resize grow   width  10 px or 10 ppt

        bindsym Escape $exit
        bindsym F7 mode "default"
}

mode "arrange" {
    #keybindings
        bindsym t layout tabbed,$exit
        bindsym h layout splith,$exit
        bindsym v layout splitv,$exit
        bindsym s layout stacked,$exit
        bindsym f floating toggle,$exit
        
        bindsym Escape $exit
        bindsym F7 mode "default"
}

mode "split" {
    #keyinding
        bindsym h splith,$exit
        bindsym v splitv,$exit

        bindsym Escape $exit
        bindsym F7 mode "default"
}

mode "open workspace" {
    #keybindings
        bindsym 1 workspace 1,$exit
        bindsym 2 workspace 2,$exit
        bindsym 3 workspace 3,$exit
        bindsym 4 workspace 4,$exit
        bindsym 5 workspace 5,$exit
        bindsym 6 workspace 6,$exit
        bindsym 7 workspace 7,$exit
        bindsym 8 workspace 8,$exit
        bindsym 9 workspace 9,$exit
        bindsym 0 workspace 0,$exit
        bindsym a workspace a,$exit
        bindsym b workspace b,$exit
        bindsym c workspace c,$exit
        bindsym d workspace d,$exit
        bindsym e workspace e,$exit
        bindsym f workspace f,$exit
        bindsym g workspace g,$exit
        bindsym h workspace h,$exit
        bindsym i workspace q, workspace i, focus output $primary_output, $exit
        bindsym j workspace f, workspace j, focus output $primary_output, $exit
        bindsym k workspace k,$exit
        bindsym l workspace l,$exit
        bindsym m workspace m,$exit
        bindsym n workspace n,$exit
        bindsym o workspace o,$exit
        bindsym p workspace q, workspace p, focus output $primary_output, $exit
        bindsym q workspace q,$exit
        bindsym r workspace r,$exit
        bindsym s workspace s,$exit
        bindsym t workspace t,$exit
        bindsym u workspace u,$exit
        bindsym v workspace v,$exit
        bindsym w workspace w,$exit
        bindsym x workspace x,$exit
        bindsym y workspace y,$exit
        bindsym z workspace z,$exit

        bindsym Escape $exit
        bindsym F7 mode "default"
}
