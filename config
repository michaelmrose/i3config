# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

#set $exit exec "ff vi3_switch-to-target-mode" 
#-----------------------variables-------------------------
    set $exit mode "default"
    set $mod Mod4
    set $primary_output   DVI-I-1
    set $secondary_output DVI-I-2
    set $selectall focus parent, focus parent, focus parent
    set $dm exec "ff dm"
    set $killall focus parent, focus parent, focus parent, kill
    set $next focus output right
    set $op exec ff vi3_operator-mode

#-----------------------appearance-------------------------

    #class                  border  backgr  text    indicator
    client.focused          #111111 #A6CD01 #036300 #2e9ef4
    client.focused_inactive #111111 #444444 #ffffff #484e50
    client.unfocused        #111111 #222222 #888888 #292d2e
    client.urgent           #2f343a #900000 #ffffff #900000

    new_window 1pixel
    font pango:DejaVu Sans Mono 10

    bar {
            position bottom
            status_command i3status
            tray_output $primary_output
    }

#-----------------------settings---------------------------
    floating_modifier $mod


#--Assign windows to workspaces and workspaces to outputs--

    #windows
        assign [class=Clementine    ] s
        assign [class=Calibre-gui   ] i
        assign [class=Hexchat       ] a
        assign [class=jetbrains-ide ] u
        assign [class=Vmware        ] r
        assign [class=Thunderbird   ] l
        

    #outputs
       workspace 1 output $secondary_output 
       workspace 2 output $secondary_output 
       workspace 3 output $secondary_output 
       workspace 4 output $secondary_output 
       workspace 5 output $secondary_output 
       workspace q output $secondary_output 
       workspace w output $secondary_output   
       workspace e output $secondary_output
       workspace r output $secondary_output
       workspace t output $secondary_output
       workspace a output $secondary_output
       workspace s output $secondary_output
       workspace d output $secondary_output 
       workspace f output $secondary_output
       workspace g output $secondary_output
       workspace z output $secondary_output 
       workspace x output $secondary_output 
       workspace c output $secondary_output 
       workspace v output $secondary_output 
       workspace b output $secondary_output
       workspace 6 output $primary_output
       workspace 7 output $primary_output
       workspace 8 output $primary_output
       workspace 9 output $primary_output
       workspace 0 output $primary_output
       workspace y output $primary_output
       workspace u output $primary_output
       workspace i output $primary_output
       workspace o output $primary_output
       workspace p output $primary_output
       workspace h output $primary_output
       workspace j output $primary_output
       workspace k output $primary_output
       workspace l output $primary_output
       workspace n output $primary_output
       workspace m output $primary_output
    
for_window [class="Kcalc"] floating enable
for_window [class="Calibre-gui" window_role="dialog"] floating enable
for_window [class="feh"] floating enable
for_window [class="firefox.exe"] fullscreen

#-----------------------Keybindings------------------------

    # change focus 
        bindsym $mod+j focus up
        bindsym $mod+k focus down
        bindsym $mod+h focus left
        bindsym $mod+l focus right

    # reload the configuration file
        bindsym $mod+Shift+c reload
        bindsym $mod+Shift+r restart
        bindsym F12 restart

    #other keybindings
        bindsym $mod+s move scratchpad
        bindsym XF86LaunchB mode "command"
        bindsym XF86Launch2 $op ws
        bindsym XF86Launch1 $op ws
        bindsym Control+Mod1+l exec "ff lock"
        bindsym Control+Mod1+s exec "suspend"
        bindsym Control+Mod1+r $dm
        bindsym F13 $dm
        bindsym Mod1+s exec "lxterminal"
        bindsym F14 exec "~/scripts/switchaudio.sh"
        bindsym F16 exec "kmix"
        bindsym $mod+n exec "ff new-session"
        bindsym F15 exec "ff setvol +5"
        bindsym F21 exec "ff setvol -5"
        bindsym $mod+a mode "audio"
 
#-----------------------modes------------------------------
mode "command" {
    #Keybindings
    bindsym F13 $dm

    # kill focused window
        bindsym q kill,$exit
        bindsym d mode "kill W window D workspace A all"

    # alternatively, you can use the cursor keys:
        bindsym Up focus up
        bindsym Down focus down
        bindsym Left focus left
        bindsym Right focus right
        
        bindsym k focus up
        bindsym j focus down
        bindsym h focus left
        bindsym l focus right
        bindsym space focus output right,$exit
        bindsym n focus output right, $exit 
        bindsym z exec "~/scripts/layoutwindows", $exit
        bindsym e exec "/home/michael/scripts/layout.sh", $exit
        bindsym Tab exec "~/scripts/rotatewindows.sh" 

    # move windows around
        bindsym Shift+k move up
        bindsym Shift+j move down
        bindsym Shift+h move left
        bindsym Shift+l move right
        
    
    # split in horizontal orientation
        bindsym v splitv

    # split in vertical orientation
        bindsym s splith

    # enter fullscreen mode for the focused container
        bindsym Shift+f fullscreen, $exit

    # focus the parent container
        bindsym p focus parent

    # focus the child container
        bindsym d focus child

    # reload the configuration file
        bindsym $mod+Shift+c reload
        bindsym $mod+Shift+r restart

        bindsym $mod+Shift+s move scratchpad
        bindsym c exec "xdotool key Caps_Lock" , $exit
        bindsym x exec "restore-from-suspend" , $exit
        
        bindsym f mode "focus"
        bindsym o mode "open"             
        bindsym r mode "resize"           
        bindsym m $op mws 
        bindsym t $op tws
        bindsym g $op gws
        bindsym w $op ws
        bindsym a mode "arrange"
        bindsym Shift+c $op cws
        bindsym Shift+r $op rws
        bindsym Shift+a mode "audio"
        
       
        # double tapping super "locks in" command mode by setting target mode to command 
        # since $exit always returns us to the target mode 
      
        # if we hit escape we must set targetmode back to default so
        # that when the user enters command mode again they wont be "locked in to command mode"

        bindsym XF86LaunchB exec "ff vi3_target-command" 
        bindsym XF86Launch1 mode "open workspace"
        bindsym Escape mode "default", exec "ff vi3_target-default"
}

mode "open" {
    #keybindings
        bindsym b       exec "firefox"                , $exit
        bindsym c       exec "kcalc"                  , $exit
        bindsym d       exec "qbittorent"             , $exit
        bindsym e       exec "nvpy"                   , $exit
        bindsym f       exec "dolphin"                , $exit
        bindsym g       exec "steam"                  , $exit
        bindsym h       exec "hexchat"                , $exit
        bindsym i       exec "idea"                   , $exit
        bindsym k       exec "kmix"                   , $exit
        bindsym l       exec "calibre"                , $exit
        bindsym m       exec "clementine"             , $exit
        bindsym Shift+m exec "vlc"                    , $exit
        bindsym n       exec "ff noteit"              , $exit
        bindsym o       exec "systemsettings"         , $exit
        bindsym Shift+o exec "kdesudo systemsettings" , $exit
        bindsym p       exec "kdesudo synaptic"       , $exit
        bindsym q       exec "qbittorrent"            , $exit
        bindsym s       exec "steam"                  , $exit
        bindsym t       exec "lxterminal"             , $exit
        bindsym v       exec "qvim"                   , $exit
        bindsym w       exec "libreoffice"            , $exit
        bindsym x       exec "ksnapshot"

        bindsym Escape $exit
        bindsym F7 mode "default"
}

mode "focus" {
    #keybindings
        bindsym b       exec "ff focus Firefox"                , $exit
        bindsym c       exec "ff focus Kcalc"                  , $exit
        bindsym d       exec "ff focus Qbittorent"             , $exit
        bindsym e       exec "ff focus Nvpy"                   , $exit
        bindsym f       exec "ff focus Dolphin"                , $exit
        bindsym g       exec "ff focus Steam"                  , $exit
        bindsym h       exec "ff focus Hexchat"                , $exit
        bindsym i       exec "ff focus Idea"                   , $exit
        bindsym l       exec "ff focus Calibre"                , $exit
        bindsym m       exec "ff focus Clementine"             , $exit
        bindsym Shift+m exec "ff focus Vlc"                    , $exit
        bindsym o       exec "ff focus Systemsettings"         , $exit
        bindsym p       exec "ff focus Synaptic"               , $exit
        bindsym q       exec "ff focus Qbittorrent"            , $exit
        bindsym s       exec "ff focus Steam"                  , $exit
        bindsym t       exec "ff focus Lxterminal"             , $exit
        bindsym v       exec "ff focus Qvim"                   , $exit
        bindsym w       exec "ff focus Libreoffice"            , $exit

        bindsym Escape $exit
        bindsym F7 mode "default"
}

mode "resize" {
    #keybindings
        bindsym Up    resize grow   height 10 px or 10 ppt
        bindsym Down  resize shrink height 10 px or 10 ppt
        bindsym Left  resize shrink width  10 px or 10 ppt
        bindsym Right resize grow   width  10 px or 10 ppt

        bindsym k resize grow   height 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym h resize shrink width  10 px or 10 ppt
        bindsym l resize grow   width  10 px or 10 ppt

        bindsym Escape $exit
        bindsym F7 mode "default"
}

mode "arrange" {
    #keybindings
        bindsym t layout tabbed,$exit
        bindsym h layout splith,$exit
        bindsym v layout splitv,$exit
        bindsym s layout stacked,$exit
        bindsym f floating toggle,$exit
        
        bindsym Escape $exit
        bindsym F7 mode "default"
}

mode "kill W window D workspace A all" {
    #keybindings
        bindsym d $killall, $exit
        bindsym w kill, $exit
        bindsym a $killall, $next, $killall, $exit
        bindsym Escape $exit
        bindsym F7 mode "default"
}

mode "audio" {
    #keybindings
        bindsym j exec "ff setvol -5"
        bindsym k exec "ff setvol +5"
        bindsym h exec "ff clemctl Prev"
        bindsym l exec "ff clemctl Next"
        bindsym n exec "~/scripts/switchaudio.sh"

        bindsym Escape $exit
        bindsym F7 mode "default"
}

mode "op" {
    #keybindings
        bindsym a exec "ff evalvi3op a",$exit
        bindsym b exec "ff evalvi3op b",$exit
        bindsym c exec "ff evalvi3op c",$exit
        bindsym d exec "ff evalvi3op d",$exit
        bindsym e exec "ff evalvi3op e",$exit
        bindsym f exec "ff evalvi3op f",$exit
        bindsym g exec "ff evalvi3op g",$exit
        bindsym h exec "ff evalvi3op h",$exit
        bindsym i exec "ff evalvi3op i",$exit
        bindsym j exec "ff evalvi3op j",$exit
        bindsym k exec "ff evalvi3op k",$exit
        bindsym l exec "ff evalvi3op l",$exit
        bindsym m exec "ff evalvi3op m",$exit
        bindsym n exec "ff evalvi3op n",$exit
        bindsym o exec "ff evalvi3op o",$exit
        bindsym p exec "ff evalvi3op p",$exit
        bindsym q exec "ff evalvi3op q",$exit
        bindsym r exec "ff evalvi3op r",$exit
        bindsym s exec "ff evalvi3op s",$exit
        bindsym t exec "ff evalvi3op t",$exit
        bindsym u exec "ff evalvi3op u",$exit
        bindsym v exec "ff evalvi3op v",$exit
        bindsym w exec "ff evalvi3op w",$exit
        bindsym x exec "ff evalvi3op x",$exit
        bindsym y exec "ff evalvi3op y",$exit
        bindsym z exec "ff evalvi3op z",$exit

        bindsym Escape $exit
        bindsym F7 mode "default"
}

exec "~/scripts/autostart.sh" 
exec "vi3_start-vi3"
